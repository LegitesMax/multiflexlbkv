@*@CodeCopy*@
@model Frontend.AspMvc.Models.IdentityModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model!.GetType().Name</h4>
<hr />

@if (string.IsNullOrEmpty(ViewBag.Error) == false)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<form asp-action="Edit">
    @await Html.PartialAsync("_EditModel", Model)
    <p></p>
    <div class="form-group">
        @await Html.PartialAsync("_SubmitBack", new Frontend.AspMvc.Models.View.SubmitBackCmd() { SubmitAction="Edit" })
    </div>
</form>

@section Scripts {
    @{
    //await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
