@model Frontend.AspMvc.Models.Model

<div class="modal fade" id="categoryValue" tabindex="-1" aria-labelledby="categoryValueLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="categoryValueLabel">Kategorie Interaktionen</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <center>
                <div class="modal-body">
                    <ul class="nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="categoryAdd-tab" data-bs-toggle="pill" data-bs-target="#categoryAdd" type="button" role="tab" aria-controls="categoryAdd" aria-selected="true">Kategorie hinzufügen</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="categoryEdit-tab" data-bs-toggle="pill" data-bs-target="#categoryEdit" type="button" role="tab" aria-controls="categoryEdit" aria-selected="false">Kategorie bearbeiten</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="categoryAdd" role="tabpanel" aria-labelledby="categoryAdd-tab">
                            @using (@Html.BeginForm("AddCategory", "Home", FormMethod.Post))
                            {
                                //Model.sub.Opereations = "addCat";

                                <div class="input-group pb-1">
                                    <span class="input-group-text">Name</span>
                                    @Html.TextBoxFor(model => model.sub.Category.Name, new { @class = "form-control", @name="Name" })
                                </div>

                                <div class="input-group pb-1">
                                    <span class="input-group-text">Kürzel</span>
                                    @Html.TextBoxFor(model => model.sub.Category.Acronym, new { @class = "form-control", @name="Acronym" })
                                </div>

                                var valuesOpenState = new SelectListItem[] { new SelectListItem() }.Union(Enum.GetValues(typeof(Frontend.AspMvc.Models.Database.Type)).Cast<Frontend.AspMvc.Models.Database.Type>().Select(e => new SelectListItem(e.ToString(), e.ToString())));
@*
                                <input class="form-control" list="datalistOptions5" id="exampleDataList5" placeholder="Suche dein Produkt">
                                <datalist id="datalistOptions5">
                                     <label asp-for="sub.Category.Type" class="control-label"></label>
                                     @Html.DropDownListFor(model => model.sub.Category.Type, valuesOpenState, new { @class = "form-select", @list="datalistOptions5"})
                                </datalist>*@

                                <div class="form-control">
                                    <label asp-for="sub.Category.Type" class="control-label"></label>
                                    
                                    @Html.DropDownListFor(model => model.sub.Category.Type, valuesOpenState, new { @class = "form-select"})
                                </div>

                                <br />

                                @Html.ValidationMessageFor(model => model.sub.Category.Name)
                                @Html.ValidationMessageFor(model => model.sub.Category.Acronym)
                                @Html.ValidationMessageFor(model => model.sub.Category.Type)

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                                    <button type="submit" class="btn btn-primary">Erstellen</button>
                                </div>
                            }
                        </div>

                        <div class="tab-pane fade" id="categoryEdit" role="tabpanel" aria-labelledby="categoryEdit-tab">
                            @using (@Html.BeginForm("EditCategory", "Home", FormMethod.Post))
                            {
                                //Model.sub.Opereations = "editCat";

                                var test = new List<SelectListItem>();

                                foreach (var item in Model.Categories!)
                                {
                                    test.Add(new SelectListItem { Text = item.Name, Value = item.Name });
                                }

                                <input class="form-control" list="datalistOptions1" id="exampleDataList1" placeholder="Suche deine Kategorie">
                                <datalist id="datalistOptions1">
                                    @Html.DropDownListFor(model => model.sub.Category.Name, test, new { @class = "form-select",  @list="datalistOptions1", @name="Name"})
                                </datalist>

                                <br />
                                <div class="input-group">
                                    <span class="input-group-text">Neuer Name</span>
                                    @Html.TextBoxFor(model => model.sub.Category.Name, new { @class = "form-control", @name="Name" })
                                </div>
                                <br>
                                <div class="input-group">
                                    <span class="input-group-text">Neues Kürzel</span>
                                    @Html.TextBoxFor(model => model.sub.Category.Acronym, new { @class = "form-control", @name="Name" })
                                </div>

                                <br />

                                @Html.ValidationMessageFor(model => model.sub.Category.Name)
                                @Html.ValidationMessageFor(model => model.sub.Category.Acronym)

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                                    <button type="submit" class="btn btn-primary">Bestätigen</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </center>
        </div>
    </div>
</div>


