@model Frontend.AspMvc.Models.Model

<div class="modal fade" id="colorValue" tabindex="-1" aria-labelledby="colorValue" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="colorValue">Farben Interaktionen</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <center>
                <div class="modal-body">
                    <ul class="nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#coloradd" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Farbe hinzufügen</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#coloredit" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Farbe bearbeiten</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent8">
                        <div class="tab-pane fade show active" id="coloradd" role="tabpanel" aria-labelledby="pills-home-tab">
                            @using (@Html.BeginForm("AddColor", "Home", FormMethod.Post))
                            {
                                <h5>Generell</h5>
                                <div class="input-group pb-2">
                                    <span class="input-group-text">Name</span>
                                    @Html.TextBoxFor(model => model.sub.Color.Name, new { @class = "form-control", @name="Name" })
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Farben Cod</span>
                                    @Html.TextBoxFor(model => model.sub.Color.ColorCode, new { @class = "form-control", @name="value"})
                                </div>

                                <br />

                                @Html.ValidationMessageFor(model => model.sub.Color.Name)
                                @Html.ValidationMessageFor(model => model.sub.Color.ColorCode)

                                @*@Html.ValidationMessageFor(model => model.sub.Size.Sizes)
                            @Html.ValidationMessageFor(model => model.sub.Size.Description)

                            @Html.ValidationMessageFor(model => model.sub.Color.Name)
                            @Html.ValidationMessageFor(model => model.sub.Color.ColorCode)*@

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                                    <button type="submit" class="btn btn-primary">Erstellen</button>
                                </div>
                            }
                        </div>

                        <div class="tab-pane fade" id="coloredit" role="tabpanel" aria-labelledby="pills-profile-tab">
                            @using (@Html.BeginForm("EditColor", "Home", FormMethod.Post))
                            {
                                var test = new List<SelectListItem>();

                                if (Model.Colors != null)
                                {
                                    foreach (var color in Model.Colors)
                                    {
                                        if (color.Name != "No Specified Color")
                                        {
                                            test.Add(new SelectListItem { Text = color.Name, Value = color.Name });
                                        }
                                    }
                                }

                                <input class="form-control" list="datalistOptions23" id="exampleDataList23" placeholder="Suche deie Farbe">
                                <datalist id="datalistOptions23">
                                    <label asp-for="sub.Color.Name" class="control-label"></label>
                                    @Html.DropDownListFor(model => model.sub.Color.Name, test, new { @class = "form-select", @list="datalistOptions23"})
                                </datalist>

                                <br>
                                <div class="input-group">
                                    <span class="input-group-text">Farbcode</span>
                                    @{
                                        @Html.TextBoxFor(model => model.sub.Color.ColorCode, new { @class = "form-control", @name="value"})
                                    }
                                </div>
                                <br />

                                @Html.ValidationMessageFor(model => model.sub.Color.Name)
                                @Html.ValidationMessageFor(model => model.sub.Color.ColorCode)

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                                    <button type="submit" class="btn btn-primary">Bestätigen</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </center>
        </div>
    </div>
</div>


