@model Frontend.AspMvc.Models.Model

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Produkt Interaktionen</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <center>
                <div class="modal-body">
                    <ul class="nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Produkt hinzufügen</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Produkt bearbeiten</button>
                        </li>
                    </ul>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                            @using (@Html.BeginForm("AddProduct", "Home", FormMethod.Post))
                            {
                                <h5>Generell</h5>
                                <div class="input-group pb-2">
                                    <span class="input-group-text">Name</span>
                                    @Html.TextBoxFor(model => model.sub.Product.Name, new { @class = "form-control", @name="Name" })
                                </div>
                                
                                <div class="input-group">
                                    <span class="input-group-text">Value & MinValue</span>
                                    @Html.TextBoxFor(model => model.sub.Product.Value, new { @class = "form-control", @name="value"})
                                    @Html.TextBoxFor(model => model.sub.Product.MinValue, new { @class = "form-control", @name="minValue" })
                                </div>

                                <br />

                                @Html.ValidationMessageFor(model => model.sub.Product.Name)
                                @Html.ValidationMessageFor(model => model.sub.Product.Value)
                                @Html.ValidationMessageFor(model => model.sub.Product.MinValue)

                                @*@Html.ValidationMessageFor(model => model.sub.Size.Sizes)
                                @Html.ValidationMessageFor(model => model.sub.Size.Description)
                            
                                @Html.ValidationMessageFor(model => model.sub.Color.Name)
                                @Html.ValidationMessageFor(model => model.sub.Color.ColorCode)*@

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                                    <button type="submit" class="btn btn-primary">Erstellen</button>
                                </div>
                            }
                        </div>

                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                            @using (@Html.BeginForm("EditProduct", "Home", FormMethod.Post))
                            {
                                var test = new List<SelectListItem>();

                                foreach (var item in Model.Categories!)
                                {
                                    foreach (var product in item.Products)
                                    {
                                        test.Add(new SelectListItem { Text = product.Name, Value = product.Name });
                                    }
                                }

                                //@Html.DropDownList("Produkt", test, "Wähle ein Produkt", new { @class = "form-select", @Name="Name"})

                                <input class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Suche dein Produkt">
                                <datalist id="datalistOptions">
                                     <label asp-for="sub.Product.Name" class="control-label"></label>
                                     @Html.DropDownListFor(model => model.sub.Product.Name, test, new { @class = "form-select", @list="datalistOptions"})
                                </datalist>

                                <br>
                                <div class="input-group">
                                    <span class="input-group-text">Value & MinValue</span>
                                    @{
                                        @Html.TextBoxFor(model => model.sub.Product.Value, new { @class = "form-control", @name="value"})
                                        @Html.TextBoxFor(model => model.sub.Product.MinValue, new { @class = "form-control", @name="minValue" })
                                    }
                                </div>
                                <br />

                                @Html.ValidationMessageFor(model => model.sub.Product.Name)
                                @Html.ValidationMessageFor(model => model.sub.Product.Value)
                                @Html.ValidationMessageFor(model => model.sub.Product.MinValue)

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                                    <button type="submit" class="btn btn-primary">Bestätigen</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </center>
        </div>
    </div>
</div>


