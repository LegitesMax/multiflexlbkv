@model IEnumerable<Frontend.AspMvc.Models.Category>

@{
    int i = 0;
    foreach (var item in Model)
    {
        <div class="accordion accordion-flush" id="accordionFlushExample">

            <div class="accordion-item p-2 w-100 bd-highlight">
                <div class="accordion-header" id="flush-heading-@i">
                    <div class="d-flex">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@i" aria-expanded="false" aria-controls="flush-collapse-@i">
                            @item.Name - @item.Products.Sum(x => x.Value)Stk
                        </button>
                        <button asp-action="EditProduct" id="@i" type="button" class="btn btn-dark">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </button>
                    </div>
                </div>
                <div id="flush-collapse-@i" class="accordion-collapse collapse" aria-labelledby="flush-heading-@i" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Bezeichnung</th>
                                    <th scope="col">Anzahl</th>
                                    <th scope="col">Min. Anzahl</th>
                                    <th scope="col">Farbe</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in @item.Products)
                                {
                                    <tr>
                                        <th scope="row">@product.Name</th>
                                        <td>@product.Value</td>
                                        <td>@product.MinValue</td>
                                        @if (product.Color == null)
                                        {
                                            <td>No specific Color</td>
                                        }
                                        else
                                        {
                                            <td>@product.Color.Name</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        i++;
    }
}